{
  "compilerOptions": {
    "target": "es2016",                                 
    "lib": ["ESNext", "DOM"],                                        
    "jsx": "preserve",
    "module": "ESNext",
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
